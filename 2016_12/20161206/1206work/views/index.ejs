<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>

    <script src="/node_modules/jquery/dist/jquery.min.js"></script>
</head>
<body>

<table border="1">
    <thead>
    <tr>
        <th>id</th>
        <th>名字</th>
        <th>操作</th>
        <th>状态</th>
    </tr>
    </thead>
    <tbody>
    <% for(var i = 0;i < users.length;i++){
        var user = users[i]; %>
    <tr>
        <td><%= user.id %></td>
        <td><%= user.user %></td>
        <td><%= user.login %></td>
        <td><a class="btn-delete" href="/users/delete?_id=<%= user._id %>">删除</a></td>
    </tr>
    <% } %>
    </tbody>
</table>
<h3>注册</h3>
<form id="form-add-user">
    <label>用户名：</label>
    <input type="text" name="user" required="required">
    <label>密码：</label>
    <input type="password" name="pass" required="required">
    <input type="submit">
</form>
<h3>登录</h3>
<form id="form-login-user">
    <label>用户名：</label>
    <input type="text" name="user" required="required">
    <label>密码：</label>
    <input type="password" name="pass" required="required">
    <input type="submit">
</form>



<script src="/javascripts/index.js"></script>
</body>
</html>
