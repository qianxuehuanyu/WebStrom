<% include ../header %>

<div class="container">
    <form>
        <div class="input-group">
            <span class="input-group-addon">用户名：</span>
            <input required="required" type="text" name="user" class="form-control" placeholder="用户名">
        </div>

        <div class="input-group">
            <span class="input-group-addon">密码：</span>
            <input required="required" type="password" name="pass" class="form-control" placeholder="密码">
        </div>

        <div class="input-group">
            <span class="input-group-addon">密码确认：</span>
            <input required="required" type="password" name="pass-confirm" class="form-control" placeholder="密码确认">
        </div>

        <div class="input-group">
            <input type="submit" value="注册" class="btn btn-primary">
        </div>
    </form>
</div>

<script src="/javascripts/users/register.js"></script>

<% include ../footer %>